<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABADAE"
    tools:context=".activity.PdfCreator">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="609dp"
        android:layout_marginTop="20dp">

    </com.github.barteksc.pdfviewer.PDFView>


    <LinearLayout
        android:id="@+id/download_btn"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_below="@+id/pdfView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/download_icon">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/download"></ImageView>

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/aller"
            android:text="Download"
            android:textColor="@color/grey"
            android:textSize="15dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_btn"
        android:layout_width="193dp"
        android:layout_height="53dp"
        android:layout_below="@+id/pdfView"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="206dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/download_icon">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/share_report"></ImageView>

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/aller"
            android:text="Share"
            android:textColor="@color/grey"
            android:textSize="15dp"></TextView>
    </LinearLayout>
</RelativeLayout>