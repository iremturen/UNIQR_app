<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="101dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/staff_list_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="61dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/course_img_staff"></ImageView>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_course_name"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:text="Introduction to Software Engineering"
                android:fontFamily="@font/aller_bold"
                android:textColor="#817E7E"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="("
                    android:fontFamily="@font/aller_bold"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#817E7E"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/item_course_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/aller_bold"
                    android:paddingLeft="5dp"
                    android:text="SE213"
                    android:textColor="#817E7E"
                    android:textSize="16dp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text=")"
                    android:fontFamily="@font/aller_bold"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#817E7E"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="43dp"
                    android:layout_height="29dp"
                    android:textColor="#817E7E"
                    android:text="Grade: "
                    android:textSize="12dp"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/aller_bold"
                    android:paddingLeft="5dp"
                    ></TextView>
            <TextView
                android:id="@+id/item_grade"
                android:layout_width="20dp"
                android:layout_height="29dp"
                android:textColor="#817E7E"
                android:text="4"
                android:layout_marginLeft="-2dp"
                android:textSize="12dp"
                android:fontFamily="@font/aller_bold"
                android:paddingLeft="5dp"
                ></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>