<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="93dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/sessions_items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/session_icon"
            ></ImageView>

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/session_id"
                android:layout_width="230dp"
                android:layout_height="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/aller"
                android:paddingLeft="5dp"
                android:text="Session Id: "
                android:textColor="#817E7E"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/session_date"
                android:layout_width="230dp"
                android:layout_height="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aller"
                android:paddingLeft="5dp"
                android:text="05.05.2023"
                android:textColor="#817E7E"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>