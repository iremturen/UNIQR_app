<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="411dp"
        android:layout_height="66dp"
        android:background="#B1B1B1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="124dp"
            android:layout_height="42dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/aller_bold"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="22dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/support"
        android:layout_width="407dp"
        android:layout_height="55dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/web_site">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aller"
            android:text="      Support                                                              ➤ "
            android:textColor="@color/grey"
            android:textSize="18dp"></TextView>

        <View
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:background="@color/grey2"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="203dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/web_site"
        android:layout_width="407dp"
        android:layout_height="55dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/aller"
            android:text="      Visit Website                                                    ➤ "
            android:textColor="@color/grey"
            android:textSize="18dp"></TextView>

        <View
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"

            android:background="@color/grey2"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="203dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logout"
        android:layout_width="198dp"
        android:layout_height="50dp"
        android:background="#EC2834"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/support">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/logout"></ImageView>

        <TextView
            android:layout_width="124dp"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aller_bold"
            android:text="Logout"
            android:textColor="@color/white"
            android:textSize="22dp"></TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>